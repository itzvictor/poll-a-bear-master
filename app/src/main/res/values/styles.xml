<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/PBActionBar</item>
        <item name="android:actionBarTabStyle">@style/PBActionBarTabStyle</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>


    <style name="PBActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#663399</item>

        <!-- Support library compatibility -->
        <!--<item name="background">@drawable/actionbar_background</item>-->
    </style>

    <style name="PBActionBarTabStyle">
        <item name="android:background">#03C9A9</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:shadowRadius">0</item>
    </style>


</resources>
